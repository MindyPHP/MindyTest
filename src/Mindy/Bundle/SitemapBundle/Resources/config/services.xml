<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter id="sitemap_scheme">http</parameter>
        <parameter id="sitemap_host">example.com</parameter>
        <parameter id="sitemap_save_path">%kernel.root_dir%/../web</parameter>
    </parameters>

    <services>
        <service id="sitemap.builder" class="Mindy\Sitemap\Builder">
            <argument type="service" id="router" on-invalid="ignore" />
        </service>
    </services>
</container>
